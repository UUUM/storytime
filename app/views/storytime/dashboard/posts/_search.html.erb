<li class="pull-right">
  <div class="btn-group margin-right" style="margin-right: 10px;">
  <%= form_for(@search_post, url: dashboard_blog_blog_page_post_index_path, html: { method: :get, class: 'form-horizontal', role: 'form' }) do |f| %>
    <div class="input-group pull-right" style="width: 200px">
      <%= f.text_field :q, class: 'form-control', placeholder: "Search" %>
      <div class="input-group-btn">
        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
      </div>
    </div>
  <% end %>
  </div>
</li>
